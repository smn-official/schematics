{
    "$schema": "http://json-schema.org/schema",
    "id": "CrudSchematics",
    "title": "Let's do cruds easily",
    "type": "object",
    "description": "Make cruds easily",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of feature",
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "x-prompt": "Escreva o nome do crud?"
        },
        "project": {
            "type": "string",
            "description": "Generate in specific Angular CLI workspace project",
            "$default": {
                "$source": "argv",
                "index": 1
            }
        },
        "route": {
            "type": "string",
            "description": "Browser path"
        },
        "convertion": {
            "type": "boolean",
            "description": "If feature is convertion"
        }
    }
}